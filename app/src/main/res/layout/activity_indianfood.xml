<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightorange"
    tools:context=".Indianfood">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerview2"
        android:background="@color/cream"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="199dp"
        android:layout_marginBottom="-1dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/indianres" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="210dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/pen"
        android:gravity="center"
        android:text="Sitting down to a meal with an Indian family hits different!"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="177dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="171dp"
        android:fontFamily="@font/barlowcondensedmedium"
        android:gravity="left"
        android:text="Most Recommended"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:textColor="@color/black"
        android:background="@color/lightorange"
        android:textStyle="bold"
        android:fontFamily="@font/barlowcondensedmedium"
        android:layout_marginBottom="6dp"
        android:text="Place Order" />

</RelativeLayout>